{% for evenement in evenements.data %}
{%- if loop.index <= 3 -%}
  <div class="border-box">
    <div id="dateStrapi{{ loop.index }}" class="number">
      {{ evenement.attributes.date | postDate }}
    </div> 
    <div class="date-location">
      <span>à </span><a href="{{ evenement.attributes.lieu[1].children[1].url }}" target="_blank" class="underline">{{ evenement.attributes.lieu[0].children[0].text }}</a>
    </div>
    <div class="event-image-container">
    <img src="https://backend-pfdc.jcloud.ik-server.com{{ evenement.attributes.icon.data.attributes.url }}" alt="Placeholder Image" class="event-image" />
    </div>
    <div class="quote">{{ evenement.attributes.title }}</div> 
    <div class="event-link"> 
      <a href="evenements/{{ evenement.attributes.title }}" class="bouton secondary arrow-right">Voir l’événement</a>
    </div>  
  </div>  

